### Variables
set $mod Mod4
set $font terminus
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $menu bemenu-run -H 18 -i --fn $font 8
set $internal_display LVDS-1
set $external_display VGA-1
set $lock swaylock

### Output configuration
output * bg /home/$USER/.config/wallpaper.jpg fill
output $internal_display disable
output $external_display {
  resolution 1920x1080
  pos 0 0
}

