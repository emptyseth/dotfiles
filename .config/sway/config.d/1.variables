#
# Custom
#
set $lock swaylock -f --color=$color0 --font=$font --font-size=14 
set $print_screen grim -g "$(slurp)" - | wl-copy && notify-send -e "Screenshot taken and copied to clipboard"
set $open_file_manager swaymsg "workspace 9; exec $TERMINAL -e $FILE"
set $toggle_internal_display swaymsg "output $INTERNAL_DISPLAY toggle"
set $start_vpn swaymsg "workspace 10; exec sh ~/.config/sway/scripts/vpn.sh"

set $WOBSOCK $XDG_RUNTIME_DIR/wob.sock
set $audio_mute wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle && (wpctl get-volume @DEFAULT_AUDIO_SINK@ | grep -q MUTED && echo 0 > $WOBSOCK) || wpctl get-volume @DEFAULT_AUDIO_SINK@ > $WOBSOCK
set $audio_raise_volume wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%+ && wpctl get-volume @DEFAULT_AUDIO_SINK@ | sed 's/[^0-9]//g' > $WOBSOCK
set $audio_lower_volume wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%- && wpctl get-volume @DEFAULT_AUDIO_SINK@ | sed 's/[^0-9]//g' > $WOBSOCK
set $audio_next mpc next
set $audio_prev mpc prev
set $audio_toggle mpc toggle
set $audio_stop mpc stop
set $brightness_down brightnessctl set 5%- | sed -En 's/.*\(([0-9]+)%\).*/\1/p' > $WOBSOCK
set $brightness_up brightnessctl set 5%+ | sed -En 's/.*\(([0-9]+)%\).*/\1/p' > $WOBSOCK

#
# Inits
#
set $init_audio pipewire & pipewire-pulse & wireplumber
set $init_notifications mako
set $init_gamma_adj wlsunset -l 44 -L 20
set $init_progress_bar rm -f $WOBSOCK && mkfifo $WOBSOCK && tail -f $WOBSOCK | wob
set $init_sync syncthing -no-browser -no-restart
